@{
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
    Html.EnableClientValidation(false);
}
@model LoginViewModel
<!--====================================
——— BANNER
===================================== -->
<section class="bannercontainer bannercontainerV1">
    <div class="fullscreenbanner-container">
        <div class="fullscreenbanner">
            <ul>
                <li data-transition="fade" data-slotamount="5" data-masterspeed="700" data-title="Slide 1">
                    @*<img src="~/assets/img/home/slider/slider-1.jpg" alt="slidebg1" data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">*@
                    <img src="~/assets/img/home/slider/slider-1.jpg" alt="slidebg1" data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">
                    <div class="slider-caption container">
                        <div class="tp-caption rs-caption-1 sft start text-center"
                             data-hoffset="0"
                             data-x="left"
                             data-y="200"
                             data-speed="800"
                             data-start="1000"
                             data-easing="Back.easeInOut"
                             data-endspeed="300">
                            Reading tracker
                        </div>
                        <div class="tp-caption rs-caption-2 sft text-center"
                             data-hoffset="0"
                             data-x="left"
                             data-y="265"
                             data-speed="1000"
                             data-start="1500"
                             data-easing="Power4.easeOut"
                             data-endspeed="300"
                             data-endeasing="Power1.easeIn"
                             data-captionhidden="off">
                            Track your personal reading progress or that <br>
                            of your child's.
                        </div>
                    </div>
                </li>
                <li data-transition="fade" data-slotamount="5" data-masterspeed="1000" data-title="Slide 2">
                    <img src="~/assets/img/home/slider/slider-2.jpg" alt="slidebg1" data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">
                    @*<img src="~/Content/Images/ReadingSlider/family-reading-slider-4.jpg" alt="slidebg1" data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">*@
                    <div class="slider-caption container">
                        <div class="tp-caption rs-caption-1 sft start text-center"
                             data-hoffset="0"
                             data-x="right"
                             data-y="200"
                             data-speed="800"
                             data-start="1000"
                             data-easing="Back.easeInOut"
                             data-endspeed="300">
                            Create Incentives
                        </div>
                        <div class="tp-caption rs-caption-2 sft text-center"
                             data-hoffset="0"
                             data-x="right"
                             data-y="265"
                             data-speed="1000"
                             data-start="1500"
                             data-easing="Power4.easeOut"
                             data-endspeed="300"
                             data-endeasing="Power1.easeIn"
                             data-captionhidden="off">
                            Our program allows YOU to choose <br>
                            the best ways to award your reader!
                        </div>
                    </div>
                </li>
                <li data-transition="fade" data-slotamount="5" data-masterspeed="700" data-title="Slide 3">
                    <img src="~/assets/img/home/slider/slider-3.jpg" alt="slidebg1" data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">
                    @*<img src="~/Content/Images/ReadingSlider/family-reading-slider-5.jpg" alt="slidebg1" data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">*@
                    <div class="slider-caption container">
                        <div class="tp-caption rs-caption-1 sft start text-center"
                             data-hoffset="0"
                             data-x="center"
                             data-y="200"
                             data-speed="800"
                             data-start="1000"
                             data-easing="Back.easeInOut"
                             data-endspeed="300">
                            Compare with Others
                        </div>
                        <div class="tp-caption rs-caption-2 sft text-center"
                             data-hoffset="0"
                             data-x="center"
                             data-y="265"
                             data-speed="1000"
                             data-start="1500"
                             data-easing="Power4.easeOut"
                             data-endspeed="300"
                             data-endeasing="Power1.easeIn"
                             data-captionhidden="off">
                            Track your entire family's progress on one screen!
                        </div>
                    </div>
                </li>
                <li data-transition="fade" data-slotamount="5" data-masterspeed="1000" data-title="Slide 2">
                    <img src="~/assets/img/home/slider/slider-4.jpg" alt="slidebg1" data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">
                    @*<img src="~/Content/Images/ReadingSlider/family-reading-slider-6.jpg" alt="slidebg1" data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">*@
                    <div class="slider-caption container">
                        <div class="tp-caption rs-caption-1 sft start text-center"
                             data-hoffset="0"
                             data-x="center"
                             data-y="200"
                             data-speed="800"
                             data-start="1000"
                             data-easing="Back.easeInOut"
                             data-endspeed="300">
                            Grow your library
                        </div>
                        <div class="tp-caption rs-caption-2 sft text-center"
                             data-hoffset="0"
                             data-x="center"
                             data-y="265"
                             data-speed="1000"
                             data-start="1500"
                             data-easing="Power4.easeOut"
                             data-endspeed="300"
                             data-endeasing="Power1.easeIn"
                             data-captionhidden="off">
                            Add an unlimited number of resources <br>
                            and see your reading growth over time.
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</section>

<!--====================================
——— COUNT UP SECTION
===================================== -->
<section class="countUpSection" style="background-image: url('../../assets/img/footer/footer-bg-1.png');">
    <div class="container">
        <div class="sectionTitleSmall wow fadeInUp">
            <h2>Reading Fun Facts</h2>
            <p>Dinosaurs didn't read - look what happened to them....</p>
        </div>
        <div class="row">
            <div class="col-sm-3 col-xs-12">
                <div class="text-center wow fadeInUp">
                    <div class="counter">156</div>
                    <div class="counterInfo bg-color-1">Books Read</div>
                </div>
            </div>
            <div class="col-sm-3 col-xs-12">
                <div class="text-center wow fadeInUp">
                    <div class="counter">244</div>
                    <div class="counterInfo bg-color-2">Prizes Won</div>
                </div>
            </div>
            <div class="col-sm-3 col-xs-12">
                <div class="text-center wow fadeInUp">
                    <div class="counter">380</div>
                    <div class="counterInfo bg-color-3">Current Books</div>
                </div>
            </div>
            <div class="col-sm-3 col-xs-12">
                <div class="text-center wow fadeInUp">
                    <div class="counter">2079</div>
                    <div class="counterInfo bg-color-4">Hours reading</div>
                </div>
            </div>
        </div>
    </div>
</section>
